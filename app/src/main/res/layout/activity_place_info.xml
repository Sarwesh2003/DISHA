<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPlace.PlaceInfo"
    android:background="@color/white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:elevation="10dp"
        android:theme="@style/AppTheme"
        android:background="@color/white">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="Disha: Facility Locator"
            app:titleTextColor="@color/black"
            app:navigationIcon="@drawable/back"
            android:minHeight="?attr/actionBarSize">

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <TextView
        android:id="@+id/step"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appbar"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:text="Step: "
        android:textColor="@color/btn_color_1"
        android:textSize="16sp"
        android:fontFamily="sans-serif-black"/>

    <TextView
        android:id="@+id/tit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/step"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-medium"
        android:text="Fill in the Information"
        android:textColor="@color/btn_color_1"
        android:textSize="14sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/tit">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_form_container"
            android:layout_margin="16dp"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="0"
            android:layout_margin="8dp">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/prev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Previous"
                android:background="@drawable/slider_back"
                android:layout_gravity="start"
                android:layout_marginEnd="4dp"
                android:drawableTint="@color/btn_color_1"
                android:drawableLeft="@drawable/back"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/continueBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/slider_back"
                android:backgroundTint="@color/btn_color_1"
                android:textColor="@color/white"
                android:layout_gravity="right"
                android:layout_marginStart="4dp"
                android:drawableRight="@drawable/ic_continue"
                android:text="Continue"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>